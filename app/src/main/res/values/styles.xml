<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppThemeBase">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AppThemeBase" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="LaunchTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="DailyItemTitleTheme" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/textColorPrimaryInverse</item>
    </style>

    <style name="DailyDetailsTitleTheme" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="DailyDetailsSourceTheme" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

</resources>
